{% extends 'base.html.twig' %}

{% block title %}Restauration{% endblock %}
{% block headline %}Restaurer une sauvegarde{% endblock %}
{% block body %}


    {{ form_start(form) }}
    {{ form_errors(form) }}

        {% for message in app.flashes('loaded-save') %}
            <div class="alert alert-info">
                {{ message }}
            </div>
        {% endfor %}

        <div class="form-group">
            <label class="col-sm-2 control-label required">
                Clé de chiffrement
                <a href="#" class="link tooltip-link" data-toggle="tooltip" data-original-title="Renseignez la clé utilisée lors de la sauvegarde (au moins 6 carctères)">
                    <span class="glyphicon glyphicon-info-sign"></span>
                </a>
            </label>

            <div class="col-sm-10">
                <a class="handsOn">
                    {{ form_widget(form.Cledechiffrement) }}
                    {{ form_errors(form.Cledechiffrement) }}
                </a>
            </div>
        </div>

        <form class="form-horizontal" action="{{ path('restoreBackup') }}" method="post" id="secteur_form" >
            <div class="form-group">
                <div id="save" >
                    {{ form_widget(form) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12 col-sm-10 col-md-10 col-lg-4 col-sm-offset-2 col-lg-offset-1">
                    <button id="send" type="submit" onclick="return confirm('Cette opération écrasera vos données actuelles. Etes-vous certain de vouloir continuer ?');" class="btn btn-success btn-lg btn-block"><i class="fa fa-pencil" aria-hidden="true"></i>Restaurer</button>
                </div>
            </div>
        </form>
    {{ form_end(form) }}


{% endblock %}