{% extends 'base.html.twig' %}

{% block title %}Import de l'existant {% endblock %}
{% block headline %}Importer des dossiers existants{% endblock %}
{% block body %}

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <form class="form-horizontal" action="{{ path('importExistent') }}" method="post" id="secteur_form">
        <div class="form-group">
            <label class="col-sm-2 control-label required" for="proId">MÃ©decin soignant*</label>
            <div class="col-sm-10">
                <select id="proId" name="proId" class="form-control">
                    {% for pro in listPro| sortbyfield('username') %}
                        <option value='{{ pro.getId }}'> {{ pro.getUsername }} </option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="form-group">
            <div id="save">
                {{ form_widget(form) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12 col-sm-10 col-md-10 col-lg-4 col-sm-offset-2 col-lg-offset-1">
                <button id="send" type="submit" class="btn btn-success btn-lg btn-block"><i class="fa fa-pencil" aria-hidden="true"></i>Importer</button>
            </div>
        </div>
    </form>
    {{ form_end(form) }}


{% endblock %}
